{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "../src",
    "jsx": "React"
  },
  "include": [
    "../src/**/*.tsx",
    "../src/**/*.css"
  ],
  "exclude": [
    "node_modules"
  ]
}